<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          android:keyWidth="11.5%p"
          android:horizontalGap="0px"
          android:verticalGap="0px"
          android:keyHeight="@dimen/key_height">

    <Row>
        <Key android:codes="-15" android:keyIcon="@drawable/ic_flat" android:keyEdgeFlags="left"/>
        <Key android:codes="-16" android:keyIcon="@drawable/ic_double_flat"/>
        <Key android:codes="-17" android:keyIcon="@drawable/ic_sharp"/>
        <Key android:codes="-18" android:keyIcon="@drawable/ic_double_sharp"/>
        <Key android:codes="-19" android:keyIcon="@drawable/ic_natural"/>
        <Key android:codes="164" android:keyIcon="@drawable/ic_half_rest"/>
        <Key android:codes="165" android:keyIcon="@drawable/ic_whole_rest"/>
        <Key android:codes="166" android:keyIcon="@drawable/ic_quarter_rest"/>
        <Key android:codes="167" android:keyIcon="@drawable/ic_eighth_rest" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="-100" android:keyLabel="" android:keyEdgeFlags="left"/>
        <Key android:codes="220" android:keyIcon="@drawable/ic_note_c"  android:popupKeyboard="@xml/popup_notes_c"/>
        <Key android:codes="230" android:keyIcon="@drawable/ic_note_d" android:popupKeyboard="@xml/popup_notes_d"/>
        <Key android:codes="240" android:keyIcon="@drawable/ic_note_e" android:popupKeyboard="@xml/popup_notes_e"/>
        <Key android:codes="250" android:keyIcon="@drawable/ic_note_f" android:popupKeyboard="@xml/popup_notes_f"/>
        <Key android:codes="260" android:keyIcon="@drawable/ic_note_g" android:popupKeyboard="@xml/popup_notes_g"/>
        <Key android:codes="270" android:keyIcon="@drawable/ic_note_a" android:popupKeyboard="@xml/popup_notes_a"/>
        <Key android:codes="280" android:keyIcon="@drawable/ic_note_b" android:popupKeyboard="@xml/popup_notes_b"/>
        <Key android:codes="-5" android:keyLabel="DEL" android:isRepeatable="true"  android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="-20" android:keyLabel="+" android:keyWidth="15%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-21" android:keyLabel="-" android:keyWidth="15%p"/>
        <Key android:codes="161" android:keyLabel="" android:keyWidth="40%p"/>
        <Key android:codes="180,181" android:keyIcon="@drawable/ic_sol_clef" android:keyWidth="15%p"/>
        <Key android:codes="184,185" android:keyIcon="@drawable/ic_end_bar" android:keyEdgeFlags="right" android:keyWidth="15%p"/>
    </Row>

</Keyboard>