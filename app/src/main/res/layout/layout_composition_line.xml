<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_one_line"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.team_red.melody.widget.MelodyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:id="@+id/composition_line_edit_text"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="@dimen/note_margin_paper"
        android:layout_marginStart="@dimen/note_margin_paper"
        android:layout_marginRight="@dimen/note_margin_paper"
        android:layout_marginEnd="@dimen/note_margin_paper"/>
</LinearLayout>